<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.example.voting.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.example.voting.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>VoteServlet</servlet-name>
        <servlet-class>com.example.voting.VoteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VoteServlet</servlet-name>
        <url-pattern>/vote</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>com.example.voting.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/admin_login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddAdminServlet</servlet-name>
        <servlet-class>com.example.voting.AddAdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddAdminServlet</servlet-name>
        <url-pattern>/add_admin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterCandidateServlet</servlet-name>
        <servlet-class>com.example.voting.RegisterCandidateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterCandidateServlet</servlet-name>
        <url-pattern>/register_candidate</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SetElectionModeServlet</servlet-name>
        <servlet-class>com.example.voting.SetElectionModeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SetElectionModeServlet</servlet-name>
        <url-pattern>/set_election_mode</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>welcome.html</welcome-file>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>register.html</welcome-file>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
</web-app>